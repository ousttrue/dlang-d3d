{
    // tasks.json 形式の詳細についての資料は、
    // https://go.microsoft.com/fwlink/?LinkId=733558 をご覧ください
    "version": "2.0.0",
    "tasks": [
        {
            "label": "dub(shell)",
            "type": "shell",
            "command": "dub",
            "args": [
                "build"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "type": "dub",
            "run": false,
            "compiler": "dmd",
            "archType": "x86_64",
            "buildType": "debug",
            "configuration": "application",
            "group": {
                "kind": "build",
                // "isDefault": true
            },
            "problemMatcher": []
        },
        {
            "label": "build dclangen",
            "type": "shell",
            "command": "dub build",
            "options": {
                "cwd": "${workspaceFolder}/dependencies/dclangen"
            },
            "problemMatcher": []
        },
        {
            "label": "generate d3d",
            "type": "shell",
            "command": "python",
            "args": [
                "-m",
                "cpptypeinfo.cli",
                "gen",
                "--d3d11",
                "--windows",
                "dlang",
                "${workspaceFolder}/source/windowskits"
            ],
            "options": {
                "cwd": "${workspaceFolder}/dependencies/cpptypeinfo"
            },
            "problemMatcher": []
        }
    ]
}