{
    // IntelliSense を使用して利用可能な属性を学べます。
    // 既存の属性の説明をホバーして表示します。
    // 詳細情報は次を確認してください: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "mago",
            "type": "mago-mi",
            "request": "launch",
            "target": "${workspaceFolder}/dlang-d3d.exe",
            // "arguments": "${env:GLTF_SAMPLE_MODELS}/2.0/Box/glTF-Binary/Box.glb",
            "cwd": "${workspaceRoot}",
            "env": {
                "PATH": "C:\\Program Files (x86)\\VisualD\\Mago;${env:PATH}"
            },
            "valuesFormatting": "parseText"
        },
        {
            "name": "dlang-d3d",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/dlang-d3d.exe",
            "args": [
                "${env:GLTF_SAMPLE_MODELS}/2.0/Box/glTF-Binary/Box.glb"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "visualizerFile": "${workspaceFolder}/.vscode/d.natvis"
        },
        {
            "name": "dclangen d3d11",
            "type": "cppvsdbg",
            "request": "launch",
            "program": "${workspaceFolder}/dependencies/dclangen/dclangen.exe",
            "args": [
                "-H",
                "C:/Program Files (x86)/Windows Kits/10/Include/10.0.17763.0/um/d3d11.h",
                "-H",
                "C:/Program Files (x86)/Windows Kits/10/Include/10.0.17763.0/shared/dxgi.h",
                "-I",
                "C:/Program Files (x86)/Windows Kits/10/Include/10.0.17763.0",
                "--outdir",
                "${workspaceFolder}/source/windowskits",
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}/dependencies/dclangen",
            "environment": [
                {
                    "name": "PATH",
                    "value": "C:/Program Files/LLVM/bin"
                }
            ],
            "visualizerFile": "${workspaceFolder}/dependencies/dclangen/d.natvis",
            "externalConsole": false
        },
        {
            "name": "cpptypeinfo d3d11",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/dependencies/cpptypeinfo/cpptypeinfo/cli.py",
            "args": [
                "gen",
                "--d3d11",
                "dlang",
                "${workspaceFolder}/source/windowskits",
            ],
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/dependencies/cpptypeinfo",
            }
        },
        {
            "name": "sukonbu dlang",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/dependencies/sukonbu/sukonbu/cli.py",
            "args": [
                "${workspaceFolder}/dependencies/sukonbu/glTF/specification/2.0/schema/glTF.schema.json",
                "--lang",
                "dlang",
                "--dst",
                "${workspaceFolder}/source/gltf.d",
            ],
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}/dependencies/sukonbu",
            }
        },
    ]
}